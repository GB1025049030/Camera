<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/make_up_bt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/extend_panel_margin_bottom_size"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <include layout="@layout/layout_selector_switch" />

    <com.freeme.camera.widget.selector.SelectorScroller
        android:id="@+id/make_up_scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:layout_weight="1"
        android:scrollbars="none">

        <com.freeme.camera.widget.selector.SelectorContainer
            android:id="@+id/make_up_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:isScrollContainer="true"
            app:display_count="4">
        </com.freeme.camera.widget.selector.SelectorContainer>

    </com.freeme.camera.widget.selector.SelectorScroller>

</LinearLayout>


