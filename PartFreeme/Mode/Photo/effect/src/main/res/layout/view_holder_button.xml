<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_face_options"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        app:tint="@color/colorGrey" />

    <TextView
        android:id="@+id/tv_title_face_options"
        android:layout_width="@dimen/logo_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_text_padding_top"
        android:ellipsize="end"
        android:gravity="top|center"
        android:maxLines="2"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/text_title_size" />

    <com.freeme.camera.mode.photo.effect.view.MarqueeTextView
        android:id="@+id/tv_desc_face_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/colorGrey"
        android:textSize="11dp"
        android:visibility="gone" />

    <View
        android:id="@+id/v_face_options"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="2dp"

        />
</LinearLayout>